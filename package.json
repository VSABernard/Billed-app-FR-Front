{
  "scripts": {
    "test": "jest --coverage ",
    "e2e": "nightwatch",
    "clean:cov": "rm -rf coverage",
    "clean:all": "rm -rf package-lock.json node_modules coverage"
  },
  "jest": {
    "verbose": false,
    "setupFiles": [
      "./setup-jest.js"
    ],
    "collectCoverageFrom": [
      "**/*.{js,jsx}",
      "!**/app/**",
      "!**/assets/**",
      "!**/external/**",
      "!**/fixtures/**",
      "!**/nightwatch/**",
      "!**/tests_output/**",
      "!**/nightwatch.conf.js",
      "!**/lcov-report/**"      
    ]
  },
  "type": "module",
  "dependencies": {
    "express": "^4.17.1",
    "global": "^4.4.0",
    "jquery": "^3.5.1",
    "path": "^0.12.7",
    "save-dev": "0.0.1-security"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.10.4",
    "@testing-library/dom": "^7.20.0",
    "@testing-library/jest-dom": "^5.11.0",
    "@testing-library/user-event": "^12.0.11",
    "babel-jest": "^26.6.3",
    "chromedriver": "^106.0.1",
    "geckodriver": "^3.0.2",
    "jest": "^26.6.3",
    "jest-environment-jsdom": "^27.4.6",
    "jest-html-reporter": "^3.1.3",
    "nightwatch": "^2.3.9",
    "typescript": "^4.8.3"
  }
}
